
 <section class="signin">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="row">
       <div class="large-6 large-offset-3 columns medium-6 medium-offset-3 columns small-6 small-offset-3 columns about-box">
       <div class="row">
       <div class="large-6 large-offset-3 columns medium-6 medium-offset-3 columns small-6 small-offset-3 columns blue-box">

          <h3>New Iteration</h3>
        </div>

        </div>
        <div>&nbsp</div>
         <div>&nbsp</div>
          <div class="field">
            <%= f.label :email, :class => "signinlabel" %><br />
            <%= f.email_field :email, autofocus: true  %>
          </div>

          <div class="field">
            <%= f.label :password, :class => "signinlabel" %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, :class => "signinlabel" %>
            </div>
          <% end -%>


                <div class="actions">
                  <%= f.submit "Log in", :class => "logsigninlinks" %>
                </div>
                 <div>&nbsp</div>


        <% end %>

          <%= render "devise/shared/links"%>

      </div>
    </div>
  </section>

